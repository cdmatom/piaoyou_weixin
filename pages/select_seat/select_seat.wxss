page{
  background-color: #e9e9e9;
}
.notice {
    color: #ed8e1e;
    height: 1.25rem;
    overflow: hidden;
    line-height: 1.25rem;
    background-color: #fcf8e8;
    padding: 0 0.5rem;
    width: 100%;
    box-sizing: border-box;
    font-size: 0.5rem;
}
.select-movie-info {
    font-size: 0.55rem;
    padding: 0.6rem 0.8rem;
    background-color: #fff;
    line-height: 1rem;
}
.select-movie-info .h3 {
    color: #949494;
    font-size: 0.55rem;
}
.select-movie-info .des {
    color: #4d4b4b;
}
.select-movie-info .date{
  line-height: 1rem;
  float: left;
}
.select-movie-info .link{
  float: right;
  color: #2ebdd7;
}
.icon-change{
  font-size: 0.55rem;
  color: #2ebdd7;
}
.icon-change::before {
    content: "\e91b";
    font-size: 0.55rem;
  color: #2ebdd7;
}
.screen {
    position: relative;
    color: #fff;
    text-align: center;
    height: 1.2rem;
    line-height: 1.2rem;
    margin-top: 1rem;
}
.screen::before {
    position: absolute;
    width: 100%;
    border-top: 1px solid #c7c7c7;
    display: inline-block;
    content: "";
    left: 0;
    top: 3px;
}
.screen text {
    color: #666;
    display: inline-block;
    width: 7.8rem;
    height: 6px;
    border: 1px solid #c7c7c7;
    border-bottom: 0;
    margin: 0 auto 0 -3.9rem;
    position: absolute;
    top: -4px;
    left: 50%;
    background-color: #e9e9e9;
    font-size: 0.4rem;
    line-height: 0.8rem;
    padding-top: 5px;
}
.seat-container {
    position: relative;
    width: 100%;
    overflow: hidden;
}
.room .table {
    position: relative;
    display: inline-block;
    margin: 0;
    background-color: transparent;
    border-radius: 5px;
    box-sizing: border-box;
}
.room .row {
    height: 1.9rem;
    clear: both;
    white-space: nowrap;
    margin-left: 2rem;
    font-size: 0;
    margin-bottom: 0.35rem;
}
.seat.empty {
    visibility: hidden;
}
.seat {
    width: 2.05rem;
    height: 1.9rem;
    margin-right: 0.35rem;
    position: relative;
    white-space: nowrap;
    float: left;
}
.optional {
    -webkit-user-select: auto;
    -webkit-touch-callout: auto;
}
.seat.optional .char, .seat.optional .wrap {
    background-color: #fff;
    border: 1px solid #d6d6d6;
}
.seat.selected .char, .seat.selected .wrap {
    border: 1px solid #0e9ab4;
    background-color: #2ebdd7;
}
.seat.selected .num {
    visibility: visible;
}
.seat.sold .char, .seat.sold .wrap {
    border: 1px solid #a6a6a6;
    background-color: #b9b9b9;
    line-height: 1.3rem;
    color: #fbfbfb;
    font-size: 1.1rem;
    font-weight: 400;
}
.seat{
    font-family: iconfont;
    speak: none;
    font-style: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    vertical-align: middle;
    display: inline-block;
}
.sold .char:before {
    content: "\e91c";
}
.seat .wrap {
    position: relative;
    font-size: 2rem;
    margin-right: 0.35rem;
    width: 1.95rem;
    height: 1.5rem;
    box-sizing: border-box;
    border-radius: 3px 3px 5px 5px;
    display: inline-block;
    top: 0.45rem;
}
.seat.optional .char, .seat.optional .wrap {
    background-color: #fff;
    border: 1px solid #d6d6d6;
}
.seat .char {
    width: 1.35rem;
    height: 1.4rem;
    line-height: 1.65rem;
    font-size: 1.2rem;
    position: absolute;
    z-index: 1;
    left: 50%;
    margin-left: -0.675rem;
    top: -0.25rem;
    box-sizing: border-box;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    text-align: center;
    color: #999;
}
.seat .num {
    width: 1.35rem;
    height: 1.4rem;
    position: absolute;
    z-index: 1;
    left: 50%;
    margin-left: -0.675rem;
    top: -0.15rem;
    color: #fff;
    font-size: .55rem;
    line-height: 0.6rem;
    text-shadow: none;
    visibility: hidden;
    text-align: center;
}
.seat-nav {
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
    width: 1.4rem;
    margin: 0 0.1rem;
    text-align: center;
    line-height: 2.25rem;
    font-size: 0.7rem;
    visibility: hidden;
}
.seat-nav .hidden {
    visibility: hidden;
}
.seat-nav .desc {
    background-color: rgba(0,0,0,.2);
    color: #fff;
}
.seat-nav .lines view {
    height: 2.25rem;
}
.seat-nav .desc.space {
    font-size: 0;
}
.seat-nav .first {
    border-top-right-radius: 0.7rem;
    border-top-left-radius: 0.7rem;
}
.seat-nav .last {
    border-bottom-right-radius: 0.7rem;
    border-bottom-left-radius: 0.7rem;
}
.seat-fixed-bottom.default {
    height: 2rem;
    background-color: #e9e9e9;
}
.seat-fixed-bottom {
    position: fixed;
    bottom: 0;
    background-color: #fff;
    width: 100%;
    height: 5.2rem;
    padding: 0 0.5rem;
    box-sizing: border-box;
    z-index: 1;
}
.smart-select-box .seat-img{
  float: left;
}
.smart-select-box .seat-img .seat {
    -webkit-transform: scale(0.4);
    -webkit-transform-origin: center center;
    transform: scale(0.4);
    transform-origin: center center;
    margin-right: 0;
}
.smart-select-box .seat-img span {
    display: inline-block;
    padding: 0 0.5rem;
    margin-left: -1.5rem;
    margin-top: -0.5rem;
}
.smart-select-box .seat-img .text {
    margin-right: -1.8rem;
    color: #666;
    font-size: 0.5rem;
    display: inline-block;
    padding: 0 0.5rem;
    margin-left: -2rem;
    margin-top: 0.6rem;
}
.smart-select-box .smart-select-seat {
    line-height: 1.8rem;
    float: right;
    font-size: 0.6rem;
    color: #2ebdd7;
}
.no-presale {
    height: 2.25rem;
    margin-top: .2rem;
}
.no-presale .set-phone {
    color: #666;
}
.no-presale .edit-phone, .no-presale .set-phone {
    width: 6.5rem;
    height: .9rem;
    margin-top: .7rem;
    float: left;
    font-size: 0.5rem;
}
.set-phone {
    border-bottom: 1px solid #2ebdd7;
}
.no-presale .iconmoon {
    font-size: 0.75rem;
    color: #2ebdd7;
}
.no-presale .edit-phone .my-phone {
    color: #333;
    margin-right: 0.35rem;
    font-size: 0.7rem;
}
.no-presale .icon-edit {
    position: relative;
    top: -2px;
}
.no-presale .table-box {
    height: 2rem;
    float: right;
}
.table-box {
    display: table;
}
.selected-seat-list {
    width: 6.8rem;
}
.cell {
    display: table-cell;
    vertical-align: middle;
}
.selected-seat-list .li:nth-child(odd){
  float: right;
}
.selected-seat-list .li:nth-child(even), .selected-seat-list .li .seat-num{
  float: left;
}
.selected-seat-list .li {
    color: #2ebdd7;
    border: 1px solid #2ebdd7;
    width: 3.1rem;
    font-size: 0.46rem;
    padding: 0 0.2rem;
    line-height: 0.95rem;
    height: 1rem;
    border-radius: 2px;
    margin-top: 0.2rem;
    margin-right: 0.2rem;
    box-sizing: border-box;
    float: left;
}
.selected-seat-list .li .btn-close-seat {
    line-height: 0.95rem;
    font-size: 0.3rem;
    float: right;
}
.btn-close-seat::before, .btn-close::before, .btn-success-close::before {
    content: "\e902";
}