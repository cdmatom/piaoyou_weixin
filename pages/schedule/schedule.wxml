          </view>
          <view  class="scroll-view-item_view" bindtap="tapMovieItem" animation="{{animationData}}">
            <image src="http://static.wepiao.com/movie/2016/9/20_0/201609201030303352.jpg" class="scroll-view-item_H" ></image>
          </view>
        <block wx:for-items="{{movie_list}}" wx:key="{{index}}">
          <view id="green{{index}}" class="scroll-view-item_view" bindtap="tapMovieItem" animation="{{index == 0 ? animationData1 : animationData}}">
            <image src="{{item.movie_poster_mini}}" class="scroll-view-item_H" data-type="{{index}}"></image>
          </view>
          
        <!--</view>-->
        </block>
      </scroll-view>
    </view>
</view>

