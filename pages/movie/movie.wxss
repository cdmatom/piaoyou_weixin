
/*movie_deatil.wxss*/
.m-detail {
    height: 9rem;
    position: relative;
    overflow: hidden;
}
.movie-poster, .movie-poster image {
    width: 100%;
}
.m-con, .movie-poster {
    position: absolute;
    left: 0;
    top: 0;
}
.blurs {
    -webkit-filter: blur(20px) opacity(30%);
    filter: blur(20px) opacity(30%);
}
.m-detail .poster-wrapper {
    position: absolute;
    top: 1rem;
    left: 0.5rem;
    width: 4.75rem;
    height: 6.785rem;
    z-index: 5;
}
.m-detail .poster-wrapper .img-MV {
    position: relative;
    display: block;
}
.m-detail .poster-wrapper .img-MV:before {
    position: absolute;
    content: "";
    zoom: 1.8;
    width: 1.5rem;
    height: 1.5rem;
    background-color: rgba(255,255,255,.6);
    border-radius: 100%;
    left: 50%;
    top: 50%;
    margin-left: -0.75rem;
    margin-top: -0.75rem;
}
.m-detail .poster-wrapper .img-MV:after {
    content: "";
    position: absolute;
    margin: -0.3rem 0 0 -0.2rem;
    left: 50%;
    top: 50%;
    border: 0.32rem solid transparent;
    border-left: 0.55rem solid #333;
    zoom: 1.8;
}
.m-detail .poster-wrapper .poster-img {
    width: 4.75rem;
    height: 6.75rem;
}
.m-detail .m-con {
    width: 10rem;
    z-index: 2;
    top: 1.25rem;
    left: 5.25rem;
    color: #333;
    padding-right: 0;
    margin-right: 0.5rem;
}
.m-detail .m-con .hd {
    line-height: 1rem;
}
.m-detail .m-con .hd .m-title {
    font-weight: 700;
    margin-right: 0.2rem;
    font-size: 0.6rem;
    display: inline-block;
}
.m-detail .m-con .movie-type {
    display: inline-block;
    float: none;
    margin-left: 0;
    top: -2px;
    position: relative;
}
.movie-type .single {
    border-radius: 2px;
}
.movie-type .other, .movie-type .single {
    background-color: #93cef5;
    color: #fff;
}
.movie-type view {
    height: 0.6rem;
    line-height: 0.58rem;
    padding: 0 0.12rem;
    display: inline-block;
    border: 1px solid #93cef5;
    border-right: none;
    font-size: 0.4rem;
    box-sizing: border-box;
}
.m-detail .m-con .m-des{
    font-size: 0.5rem;
}
.m-detail .m-con .m-des .reviews {
    margin-top: 0.5rem;
    line-height: 0.8rem;
}
.m-detail .m-con .m-des .show-star-mod {
    margin: 0.5rem 0;
}
.m-detail .m-con .m-des .show-star-mod .show-star-ranking {
    margin: 0.3rem 0.3rem 0 0;
    background-image: url(data:image/png;base64,);
}
.m-detail .m-con .m-des .show-star-mod .show-star-ranking .show-star-ranking-light {
    background-image: url(data:image/png;base64,);
}
.m-detail .m-con .m-des .show-star-mod .show-star-ranking, .m-detail .m-con .m-des .show-star-mod .show-star-ranking-light {
    width: 3.2rem;
    height: 0.6rem;
    background-size: auto 100%;
    background-repeat: no-repeat;
    background-position: left top;
    float: left;
}
.m-detail .m-con .m-des .show-star-mod .show-star-remark {
    color: #f8bb00;
    font-size: 0.5rem;
    float: left;
    line-height: 1.4rem;
}
.m-detail .m-con .m-des .m-type {
    margin-bottom: 0.25rem;
}
.m-intro-box {
    padding: 1rem 0;
    border-bottom: .5rem solid #f9f9f9;
    font-size: 0.5rem;
}
.m-intro-box .m-intro .info {
    display: -webkit-box;
    -webkit-box-orient: horizontal;
    line-height: .75rem;
    margin-bottom: .5rem;
}
.m-intro-box .m-intro .info .full {
    -webkit-box-flex: 1;
    color: #333;
    text-align: justify;
}
.m-intro-box .m-intro .info .m-intro-des {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.line-limit {
    -webkit-line-clamp: 2;
}
.m-intro-box .more-moive-info {
    display: block;
    text-align: center;
}
.m-intro-box .more-moive-info .arrow-ent.bottom {
    top: 0;
}
.m-intro-box .more-moive-info .arrow-ent {
    border-width: 1px;
    border-color: #d5d5d5;
}
.arrow-ent.bottom {
    -webkit-transform: rotate(-315deg);
}
.arrow-ent {
    width: .4rem;
    height: .4rem;
    display: inline-block;
    border-right: 1px solid #6d6d6d;
    border-bottom: 1px solid #6d6d6d;
    cursor: pointer;
    position: relative;
}
.film-maker-wrapper,.m-album-wrapper {
    position: relative;
    background: #fff;
    padding: .25rem 0 .25rem .6rem
}

.film-maker-wrapper h3,.m-album-wrapper h3 {
    line-height: 1.5rem;
    color: #333
}

.film-maker-wrapper {
    height: 10rem;
    border-bottom: .5rem solid #f9f9f9
}

.film-maker-wrapper .film-maker-list {
    height: 1000px;
    position: relative;
    overflow-x: scroll;
    -webkit-overflow-scrolling: none;
    margin-top:200px;
}

.film-maker-wrapper .film-maker-list ul {
    white-space: nowrap
}

.film-maker-wrapper .film-maker-list ul li {
    position: relative;
    display: inline-block;
    width: 3.35rem;
    margin-right: .125rem;
    vertical-align: top
}

.film-maker-wrapper .film-maker-list ul li.director {
    margin-right: .4rem
}

.film-maker-wrapper .film-maker-list ul li .film-maker-img {
    width: 3.35rem;
    height: 4.75rem;
    overflow: hidden;
    margin-bottom: .7rem;
    border: 1px solid #e5e5e5
}

.film-maker-wrapper .film-maker-list ul li .film-maker-img img {
    width: 100%;
    height: 100%
}

.film-maker-wrapper .film-maker-list ul li .film-maker-name {
    color: #333
}

.film-maker-wrapper .film-maker-list ul li .film-maker-oart {
    color: #999
}

.film-maker-wrapper .film-maker-list ul li .film-maker-oart em {
    padding-left: 2px
}

.film-maker-wrapper .film-maker-list ul li span {
    display: block;
    line-height: .9rem
}

.film-maker-wrapper .film-maker-list .film-maker-pop {
    z-index: 1;
    background: #fff;
    padding: .3rem;
    position: absolute;
    left: 0;
    top: 5.6rem;
    box-shadow: 0 0 4px rgba(0,0,0,.08);
    border-radius: 2px;
    display: none
}

.film-maker-wrapper .film-maker-list .film-maker-pop:after {
    content: "";
    position: absolute;
    display: inline-block;
    width: 9px;
    height: 9px;
    border-left: none;
    border-top: none;
    left: 1.4rem;
    top: -5px;
    background: #fff;
    -webkit-transform: rotate(225deg);
    transform: rotate(225deg);
    margin-top: -1px
}

.film-maker-wrapper .film-maker-list .film-maker-pop .film-maker-pop-title {
    color: #333
}

.film-maker-wrapper .film-maker-list .film-maker-pop p {
    color: #999;
    white-space: nowrap
}

.film-maker-wrapper .film-maker-list .film-maker-pop p em {
    padding-right: 3px
}

.m-album-wrapper {
    height: 7.3rem;
    margin-bottom: 2.2rem
}

.m-album-wrapper .all-album {
    line-height: 2rem;
    color: #333;
    width: 15rem
}

.m-album-wrapper .all-album span {
    padding: 0 2px
}

.m-album-wrapper .m-album-container {
    position: relative;
    overflow-x: scroll;
    -webkit-overflow-scrolling: none;
    height: 3.25rem
}

.m-album-wrapper .m-album-container .m-album .m-album-item {
    -webkit-box-flex: 1 0 auto;
    -webkit-flex: 1 0 auto;
    width: 4.5rem;
    height: 3.25rem;
    margin-right: .125rem
}

.m-album-wrapper .m-album-container .m-album .m-album-item .m-poster {
    margin: 0 auto
}

.m-album-wrapper .m-album-container .m-album .m-album-item .m-poster img {
    width: 4.5rem;
    height: 3.25rem;
    margin: 0 auto
}
